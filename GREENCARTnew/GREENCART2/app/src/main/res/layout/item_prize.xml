<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgPrize"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="@string/prize_image_cd" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvPrizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prize_title_placeholder"
                android:textColor="@color/text_charcoal"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrizePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prize_points_placeholder"
                android:textColor="@color/text_medium"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrizeRedeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prize_redeem" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
